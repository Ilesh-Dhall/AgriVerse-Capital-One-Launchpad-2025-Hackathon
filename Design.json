{
  "designSystem": {
    "colorPalette": {
      "primary": {
        "brand": "#6B73FF",
        "brandLight": "#8B93FF",
        "brandDark": "#4B53DF"
      },
      "accent": {
        "orange": "#FF8A65",
        "orangeLight": "#FFB74D",
        "purple": "#AB69D3",
        "purpleLight": "#CE93D8",
        "green": "#66BB6A",
        "greenLight": "#81C784",
        "blue": "#42A5F5",
        "blueLight": "#64B5F6"
      },
      "neutral": {
        "background": "#FFF5E6",
        "backgroundSecondary": "#F5F5F5",
        "surface": "#FFFFFF",
        "surfaceElevated": "#FAFAFA",
        "border": "#E0E0E0",
        "divider": "#EEEEEE"
      },
      "text": {
        "primary": "#1A1A1A",
        "secondary": "#666666",
        "tertiary": "#999999",
        "inverse": "#FFFFFF"
      },
      "semantic": {
        "success": "#4CAF50",
        "warning": "#FF9800",
        "error": "#F44336",
        "info": "#2196F3"
      }
    },

    "typography": {
      "fontFamily": {
        "primary": "SF Pro Display, -apple-system, BlinkMacSystemFont, system-ui, sans-serif",
        "secondary": "SF Pro Text, -apple-system, BlinkMacSystemFont, system-ui, sans-serif"
      },
      "fontSizes": {
        "xs": "12px",
        "sm": "14px",
        "base": "16px",
        "lg": "18px",
        "xl": "20px",
        "2xl": "24px",
        "3xl": "32px",
        "4xl": "40px"
      },
      "fontWeights": {
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "lineHeights": {
        "tight": 1.2,
        "normal": 1.5,
        "relaxed": 1.75
      }
    },

    "spacing": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px",
      "3xl": "64px"
    },

    "borderRadius": {
      "sm": "8px",
      "md": "12px",
      "lg": "16px",
      "xl": "20px",
      "2xl": "24px",
      "full": "50%"
    },

    "shadows": {
      "sm": "0 2px 8px rgba(0, 0, 0, 0.04)",
      "md": "0 4px 16px rgba(0, 0, 0, 0.08)",
      "lg": "0 8px 32px rgba(0, 0, 0, 0.12)",
      "colored": "0 4px 16px rgba(107, 115, 255, 0.2)"
    },

    "components": {
      "card": {
        "variants": {
          "primary": {
            "background": "gradient",
            "gradients": [
              "linear-gradient(135deg, #6B73FF 0%, #AB69D3 100%)",
              "linear-gradient(135deg, #FF8A65 0%, #FFB74D 100%)",
              "linear-gradient(135deg, #42A5F5 0%, #66BB6A 100%)"
            ],
            "borderRadius": "lg",
            "padding": "lg",
            "shadow": "md",
            "textColor": "inverse"
          },
          "secondary": {
            "background": "surface",
            "borderRadius": "md",
            "padding": "md",
            "shadow": "sm",
            "border": "1px solid neutral.border"
          },
          "glass": {
            "background": "rgba(255, 255, 255, 0.8)",
            "backdropFilter": "blur(20px)",
            "borderRadius": "lg",
            "border": "1px solid rgba(255, 255, 255, 0.2)"
          }
        },
        "elements": {
          "icon": {
            "size": "24px",
            "position": "top-left",
            "background": "rgba(255, 255, 255, 0.2)",
            "borderRadius": "sm"
          },
          "title": {
            "fontSize": "xl",
            "fontWeight": "bold",
            "marginBottom": "sm"
          },
          "subtitle": {
            "fontSize": "sm",
            "opacity": 0.8
          },
          "actionButton": {
            "position": "bottom-right",
            "size": "40px",
            "borderRadius": "full",
            "background": "rgba(255, 255, 255, 0.2)"
          }
        }
      },

      "chatInterface": {
        "container": {
          "background": "neutral.background",
          "borderRadius": "xl",
          "padding": "lg",
          "maxWidth": "800px"
        },
        "messageContainer": {
          "gap": "md",
          "padding": "sm 0"
        },
        "userMessage": {
          "background": "primary.brand",
          "color": "text.inverse",
          "borderRadius": "lg lg sm lg",
          "padding": "sm md",
          "marginLeft": "xl",
          "alignSelf": "flex-end"
        },
        "aiMessage": {
          "background": "neutral.surface",
          "color": "text.primary",
          "borderRadius": "sm lg lg lg",
          "padding": "sm md",
          "marginRight": "xl",
          "shadow": "sm"
        },
        "inputField": {
          "background": "neutral.surface",
          "borderRadius": "xl",
          "padding": "md",
          "border": "1px solid neutral.border",
          "fontSize": "base"
        },
        "sendButton": {
          "background": "primary.brand",
          "borderRadius": "full",
          "size": "48px",
          "shadow": "colored"
        }
      },

      "progressIndicator": {
        "circular": {
          "size": "120px",
          "strokeWidth": "8px",
          "background": "neutral.divider",
          "foreground": "primary.brand",
          "centerText": {
            "fontSize": "2xl",
            "fontWeight": "bold"
          }
        },
        "linear": {
          "height": "8px",
          "borderRadius": "full",
          "background": "neutral.divider",
          "foreground": "accent.orange"
        },
        "chart": {
          "barHeight": "varies",
          "borderRadius": "sm",
          "gap": "xs",
          "colors": ["accent.orange", "primary.brand", "neutral.divider"]
        }
      },

      "navigation": {
        "tabBar": {
          "background": "rgba(26, 26, 26, 0.9)",
          "borderRadius": "2xl",
          "padding": "sm",
          "backdropFilter": "blur(20px)"
        },
        "tabItem": {
          "size": "48px",
          "borderRadius": "xl",
          "activeBackground": "primary.brand",
          "inactiveOpacity": 0.6
        }
      },

      "dataVisualization": {
        "statCard": {
          "background": "neutral.surface",
          "borderRadius": "md",
          "padding": "md",
          "textAlign": "center",
          "shadow": "sm"
        },
        "metricValue": {
          "fontSize": "3xl",
          "fontWeight": "bold",
          "color": "text.primary"
        },
        "metricLabel": {
          "fontSize": "sm",
          "color": "text.secondary",
          "textTransform": "uppercase",
          "letterSpacing": "0.5px"
        },
        "trendIndicator": {
          "iconSize": "16px",
          "colors": {
            "up": "semantic.success",
            "down": "semantic.error"
          }
        }
      },

      "farmingSpecific": {
        "cropCard": {
          "background": "gradient",
          "borderRadius": "lg",
          "padding": "lg",
          "minHeight": "200px",
          "elements": {
            "cropIcon": {
              "size": "48px",
              "background": "rgba(255, 255, 255, 0.2)",
              "borderRadius": "md"
            },
            "healthStatus": {
              "indicator": "dot",
              "size": "12px",
              "colors": {
                "healthy": "semantic.success",
                "warning": "semantic.warning",
                "critical": "semantic.error"
              }
            },
            "weatherInfo": {
              "background": "rgba(255, 255, 255, 0.1)",
              "borderRadius": "sm",
              "padding": "xs sm"
            }
          }
        },
        "actionButton": {
          "variants": {
            "primary": "background: primary.brand, shadow: colored",
            "secondary": "background: neutral.surface, border: 1px solid neutral.border",
            "success": "background: semantic.success",
            "warning": "background: semantic.warning"
          },
          "borderRadius": "md",
          "padding": "sm md",
          "fontSize": "base",
          "fontWeight": "medium"
        }
      }
    },

    "patterns": {
      "layout": {
        "grid": {
          "columns": "repeat(auto-fit, minmax(300px, 1fr))",
          "gap": "lg",
          "padding": "lg"
        },
        "flexStack": {
          "direction": "column",
          "gap": "md",
          "alignItems": "stretch"
        }
      },

      "interactions": {
        "hover": {
          "transform": "translateY(-2px)",
          "shadow": "lg",
          "transition": "all 0.2s ease"
        },
        "active": {
          "transform": "translateY(0px)",
          "shadow": "sm"
        },
        "focus": {
          "outline": "2px solid primary.brand",
          "outlineOffset": "2px"
        }
      },

      "animations": {
        "slideIn": {
          "duration": "0.3s",
          "easing": "cubic-bezier(0.4, 0, 0.2, 1)",
          "from": "transform: translateX(20px); opacity: 0",
          "to": "transform: translateX(0); opacity: 1"
        },
        "fadeIn": {
          "duration": "0.2s",
          "from": "opacity: 0",
          "to": "opacity: 1"
        },
        "scaleIn": {
          "duration": "0.2s",
          "from": "transform: scale(0.95); opacity: 0",
          "to": "transform: scale(1); opacity: 1"
        }
      }
    },

    "responsive": {
      "breakpoints": {
        "mobile": "320px",
        "tablet": "768px",
        "desktop": "1024px",
        "wide": "1440px"
      },
      "adaptations": {
        "mobile": {
          "cardPadding": "md",
          "fontSize": "reduce by 2px",
          "gridColumns": "1",
          "spacing": "reduce by 25%"
        },
        "tablet": {
          "gridColumns": "2",
          "chatMaxWidth": "600px"
        },
        "desktop": {
          "gridColumns": "3",
          "chatMaxWidth": "800px"
        }
      }
    },

    "accessibility": {
      "contrast": {
        "minimum": "4.5:1",
        "enhanced": "7:1"
      },
      "focusIndicators": {
        "visible": true,
        "style": "outline: 2px solid primary.brand"
      },
      "typography": {
        "minimumSize": "16px",
        "lineHeight": "minimum 1.5"
      }
    },

    "farmingDomain": {
      "semanticColors": {
        "soilHealth": {
          "excellent": "#2E7D32",
          "good": "#66BB6A",
          "fair": "#FFB74D",
          "poor": "#F44336"
        },
        "cropStages": {
          "planting": "#8BC34A",
          "growing": "#4CAF50",
          "flowering": "#FF9800",
          "harvesting": "#FF5722"
        },
        "weather": {
          "sunny": "#FFD54F",
          "cloudy": "#90A4AE",
          "rainy": "#42A5F5",
          "stormy": "#37474F"
        }
      },
      "iconLibrary": {
        "crops": ["corn", "wheat", "tomato", "potato", "carrot"],
        "tools": ["tractor", "watering-can", "fertilizer", "seed"],
        "weather": ["sun", "cloud", "rain", "storm", "thermometer"],
        "analytics": ["chart", "trend-up", "calendar", "alert"]
      },
      "dataTypes": {
        "metrics": ["yield", "moisture", "ph-level", "temperature", "rainfall"],
        "alerts": [
          "pest-warning",
          "disease-alert",
          "weather-warning",
          "harvest-ready"
        ],
        "recommendations": [
          "fertilizer",
          "irrigation",
          "pest-control",
          "harvest-timing"
        ]
      }
    }
  }
}
